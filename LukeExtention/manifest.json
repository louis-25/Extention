{
  "manifest_version": 2,

  "name": "Fireside Extensions",
  "description" : "LUKE에서 더블클릭으로 동작함",
  "version": "1.0",  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon/fireside.png"
  },  
  "background":{
    "persistent": true,
    "scripts": ["js/background.js"] 
  },
  "content_scripts": [
    {
      "matches": [
        "https://luke30.fasoo.com/*",
        "https://web2.fasoo.com/*",
        "https://web1.fasoo.com/*"        
      ],
      "js": ["js/jquery-3.6.0.min.js","js/content_script.js"],
      "all_frames":true
    }
  ],  
  "web_accessible_resources":[
    "modal.html",
    "images/building.png",
    "images/user.png",
    "images/hero.png",
    "images/hero_icon.png",
    "images/phone.png",
    "images/mobilephone.png",
    "images/email.png"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "https://luke30.fasoo.com/*",
    "https://web2.fasoo.com/*",
    "https://web1.fasoo.com/*"
  ]

}